{
  "name": "replikk",
  "version": "1.0.0",
  "description": "Replikk - Electron + React + Node (Express), Socket.IO ve WebRTC tabanli lobi ve sesli sohbet uygulamasi",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:server": "node server/index.js",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.0",
    "electron": "^32.0.0",
    "vite": "^5.4.0",
    "wait-on": "^8.0.0"
  }
}


